<{{{element element}}} data-accordion class="{{classes.root}}" {{{attrs attributes}}}>
  {{#each sections}}
    <{{{element element}}} data-accordion-item class="{{classes.item}}">
      <button class="{{classes.heading}}" {{{attrs heading.attributes}}}>
        {{#if featureFlags.componentsX}}
          {{ carbon-icon 'ChevronRight16' class=(add classes.icon) }}
        {{else}}
          <svg class="{{classes.icon}}" width="7" height="12" viewBox="0 0 7 12">
            <path fill-rule="nonzero" d="M5.569 5.994L0 .726.687 0l6.336 5.994-6.335 6.002L0 11.27z" />
          </svg>
        {{/if}}
        <div class="{{classes.title}}" {{{attrs title.attributes}}}>{{title.content}}</div>
      </button>
      <div class="{{classes.content}}" {{{attrs content.attributes}}}>
        <p>{{content.content}}</p>
      </div>
    </{{{element element}}}>
  {{/each}}
</{{{element element}}}>
